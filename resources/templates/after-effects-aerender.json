{
    "_version": 1,
    "template_id": "after-effects-aerender",
    "name": "After Effects \u2014 aerender",

    "cmd": {
        "windows": "C:/Program Files/Adobe/Adobe After Effects 2026/Support Files/aerender.exe",
        "macos": "/Applications/Adobe After Effects 2026/aerender",
        "label": "aerender Executable",
        "editable": true
    },

    "frame_padding": "[####]",

    "flags": [
        { "flag": "-project", "value": null, "info": "Project file flag", "editable": false },
        { "flag": "", "value": "", "info": "Project File (.aep)", "editable": true, "required": true, "type": "file", "filter": "aep", "id": "project" },
        { "flag": "-comp", "value": null, "info": "Composition name flag", "editable": false },
        { "flag": "", "value": "", "info": "Composition Name", "editable": true, "required": true, "id": "comp_name" },
        { "flag": "-output", "value": null, "info": "Output path flag", "editable": false },
        { "flag": "", "value": "", "info": "Output Path", "editable": true, "required": true, "type": "output",
          "default_pattern": "{project_dir}\\..\\renders\\{date:YYYYMMDD}_{time:HHmm}--{flag:comp_name}\\{flag:comp_name}_{frame_pad}" },
        { "flag": "-OMtemplate", "value": null, "info": "Output Module template flag", "editable": false },
        { "flag": "", "value": "Multi-Machine Sequence", "info": "Output Module Template (e.g. Multi-Machine Sequence, Lossless)", "editable": true, "required": false },
        { "flag": "-RStemplate", "value": null, "info": "Render Settings template flag", "editable": false },
        { "flag": "", "value": "", "info": "Render Settings Template (e.g. Best Settings)", "editable": true, "required": false },
        { "flag": "-v", "value": null, "info": "Verbosity flag", "editable": false },
        { "flag": "", "value": "ERRORS_AND_PROGRESS", "info": "Verbosity (ERRORS, ERRORS_AND_PROGRESS)", "editable": false },
        { "flag": "-s", "value": null, "info": "Start frame flag", "editable": false },
        { "flag": "", "value": "{chunk_start}", "info": "Start frame (runtime)", "editable": false },
        { "flag": "-e", "value": null, "info": "End frame flag", "editable": false },
        { "flag": "", "value": "{chunk_end}", "info": "End frame (runtime)", "editable": false },
        { "flag": "-reuse", "value": null, "info": "Reuse running AE instance between chunks", "editable": false },
        { "flag": "-continueOnMissingFootage", "value": null, "info": "Don't abort on missing footage", "editable": false }
    ],

    "job_defaults": {
        "frame_start": 0,
        "frame_end": 100,
        "chunk_size": 20,
        "priority": 50,
        "max_retries": 3,
        "timeout_seconds": 1800
    },

    "progress": {
        "patterns": [
            {
                "regex": "PROGRESS:\\s*.*\\((\\d+)\\)",
                "type": "percentage",
                "group": 1,
                "info": "aerender frame progress (frame number as proxy)"
            }
        ],
        "completion_pattern": {
            "regex": "Finished composition",
            "info": "aerender logs 'Finished composition' when render completes"
        },
        "error_patterns": [
            { "regex": "aerender ERROR.*", "info": "aerender error" },
            { "regex": "Error:.*Unable to apply.*", "info": "Render settings error" },
            { "regex": "After Effects:.*license.*", "info": "License error" },
            { "regex": "Missing footage.*", "info": "Missing footage file" },
            { "regex": "After Effects error.*", "info": "Generic AE error" },
            { "regex": "Rendering error.*", "info": "Render failed" },
            { "regex": "Can't open project.*", "info": "Project file inaccessible" }
        ]
    },

    "output_detection": {
        "stdout_regex": null,
        "validation": "exit_code_only",
        "info": "aerender does not reliably log output file paths to stdout"
    },

    "process": {
        "kill_method": "terminate",
        "working_dir": null
    },

    "environment": {},

    "tags_required": ["ae"]
}
