{
    "_version": 1,
    "template_id": "after-effects",
    "name": "After Effects",

    "cmd": {
        "windows": "C:/Program Files/Adobe/Adobe After Effects 2026/Support Files/aerender.exe",
        "macos": "/Applications/Adobe After Effects 2025/aerender",
        "label": "aerender Executable",
        "editable": true
    },

    "frame_padding": "[#####]",

    "flags": [
        { "flag": "-project", "value": null, "info": "Project flag", "editable": false },
        { "flag": "", "value": "", "id": "project_file", "info": "Project File (.aep)", "editable": true, "required": true, "type": "file", "filter": "aep,aepx" },
        { "flag": "-comp", "value": null, "info": "Composition flag", "editable": false },
        { "flag": "", "value": "", "id": "comp_name", "info": "Composition Name", "editable": true, "required": true },
        { "flag": "-RStemplate", "value": null, "info": "Render Settings template flag", "editable": false },
        { "flag": "", "value": "", "id": "rs_template", "editable": true, "info": "Render Settings Template",
          "help": "Named render settings template from AE. Leave blank to use project defaults." },
        { "flag": "-OMtemplate", "value": null, "info": "Output Module template flag", "editable": false },
        { "flag": "", "value": "", "id": "om_template", "editable": true, "info": "Output Module Template",
          "help": "Named output module template from AE. Leave blank to use project defaults." },
        { "flag": "-s", "value": null, "info": "Start frame flag", "editable": false },
        { "flag": "", "value": "{chunk_start}", "info": "Start frame (runtime)", "editable": false },
        { "flag": "-e", "value": null, "info": "End frame flag", "editable": false },
        { "flag": "", "value": "{chunk_end}", "info": "End frame (runtime)", "editable": false },
        { "flag": "-output", "value": null, "info": "Output path flag", "editable": false },
        { "flag": "", "value": "", "id": "output_path", "info": "Output Path", "editable": true, "required": true, "type": "output",
          "default_pattern": "{project_dir}/renders/{flag:comp_name}/{flag:comp_name}_{frame_pad}" }
    ],

    "job_defaults": {
        "frame_start": 0,
        "frame_end": 90,
        "chunk_size": 10,
        "priority": 50,
        "max_retries": 3,
        "timeout_seconds": null
    },

    "progress": {
        "patterns": [],
        "completion_pattern": {
            "regex": "PROGRESS:\\s+\\d+:\\d+:\\d+:\\d+\\s+\\(\\d+\\)",
            "info": "aerender per-frame completion (timecode + frame index)"
        },
        "error_patterns": [
            { "regex": "aerender ERROR.*", "info": "aerender error" },
            { "regex": "Error:.*unable to create.*", "info": "Output directory inaccessible" },
            { "regex": "Error:.*out of memory.*", "info": "Out of memory" },
            { "regex": "Error:.*missing.*footage.*", "info": "Missing footage" },
            { "regex": "Error:.*codec.*", "info": "Codec error" },
            { "regex": "Error:.*license.*", "info": "License error" }
        ]
    },

    "output_detection": {
        "stdout_regex": null,
        "validation": "exit_code_only",
        "info": "aerender does not reliably log output file paths to stdout"
    },

    "process": {
        "kill_method": "terminate",
        "working_dir": null
    },

    "environment": {},

    "tags_required": ["ae"]
}
